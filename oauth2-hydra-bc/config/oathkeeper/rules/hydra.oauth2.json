        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "noop"
    },
    "credentials_issuer": {
      "handler": "noop"
    }
  },
  {
    "id": "${OATHKEEPER_RESOURCE_PREFIX}rules:hydra:oauth2:token",
    "upstream": {
      "url": "${HYDRA_URL}/"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/oauth2/token",
      "methods": [
        "POST"
      ]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "noop"
    },
    "credentials_issuer": {
      "handler": "noop"
    }
  },
  {
    "id": "${OATHKEEPER_RESOURCE_PREFIX}rules:hydra:oauth2:auth",
    "upstream": {
      "url": "${HYDRA_URL}/"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/oauth2/auth",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "noop"
    },
    "credentials_issuer": {
      "handler": "noop"
    }
  },
  {
    "id": "${OATHKEEPER_RESOURCE_PREFIX}rules:hydra:oauth2:consent-fallback",
    "upstream": {
      "url": "${HYDRA_URL}/"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/oauth2/consent-fallback",
      "methods": [
        "GET"
      ]
    },
    "authenticators": [
      {
        "handler": "noop"
      }
    ],
    "authorizer": {
      "handler": "noop"
    },
    "credentials_issuer": {
      "handler": "noop"
    }
  },
  {
    "id": "${OATHKEEPER_RESOURCE_PREFIX}rules:hydra:oauth2:introspect",
    "upstream": {
      "url": "${HYDRA_URL}/"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/oauth2/introspect",
      "methods": [
        "POST"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_client_credentials",
        "config": {
          "required_scope": [
            "hydra.introspect"
          ]
        }
      },
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": [
            "hydra.introspect"
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "keto_warden",
      "config": {
        "required_resource": "${HYDRA_RESOURCE_PREFIX}oauth2:tokens",
        "required_action": "${HYDRA_ACTION_PREFIX}introspect"
      }
    },
    "credentials_issuer": {
      "handler": "noop"
    }
  },
  {
    "id": "${OATHKEEPER_RESOURCE_PREFIX}rules:hydra:oauth2:flush",
    "upstream": {
      "url": "${HYDRA_URL}/"
    },
    "match": {
      "url": "${OATHKEEPER_PROXY_URL}/oauth2/flush",
      "methods": [
        "POST"
      ]
    },
    "authenticators": [
      {
        "handler": "oauth2_client_credentials",
        "config": {
          "required_scope": [
            "hydra.introspect"
          ]
        }
      },
      {
        "handler": "oauth2_introspection",
        "config": {
          "required_scope": [
            "hydra.tokens.flush"
          ]
        }
      }
    ],
    "authorizer": {
      "handler": "keto_warden",
      "config": {
        "required_resource": "${HYDRA_RESOURCE_PREFIX}oauth2:tokens",
        "required_action": "${HYDRA_ACTION_PREFIX}flush"
      }
    },
    "credentials_issuer": {
      "handler": "noop"
    }
  }
]
